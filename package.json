{
  "name": "postcss-autoimport",
  "version": "0.2.0",
  "description": "PostCSS plugin for automatic import of global dependencies",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "global",
    "import"
  ],
  "author": "Ruslan Abdullaev <skarlatin@mail.ru>",
  "license": "MIT",
  "repository": "rajdee/postcss-autoimport",
  "bugs": {
    "url": "https://github.com/rajdee/postcss-autoimport/issues"
  },
  "homepage": "https://github.com/rajdee/postcss-autoimport",
  "devDependencies": {
    "eslint": "^7.11.0",
    "fast-glob": "^3.2.4",
    "jest": "^26.6.0",
    "postcss": "^8.0.0",
    "postcss-import": "^12.0.1"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "scripts": {
    "test": "jest && eslint *.js"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "security/detect-non-literal-require": "off",
      "node/global-require": "off",
      "consistent-return": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
